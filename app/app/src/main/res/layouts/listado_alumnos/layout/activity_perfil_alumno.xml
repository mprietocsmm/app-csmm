<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_anchorGravity="center"/>

    <View
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/foto_perfil"
        android:layout_marginTop="40dp"
        android:background="@color/grey"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/foto_perfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="12dp"
        app:cardCornerRadius="75dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/imageView1"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>
    <com.google.android.material.textview.MaterialTextView
       android:id="@+id/nombreTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/linea"
       app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
       android:text="Nombre: "
       android:textStyle="bold"
       android:textSize="20sp"/>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/nombreTextView"
        app:layout_constraintStart_toEndOf="@id/nombreTextView"
        android:text="Daniel"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/apellidosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nombreTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Apellidos: "
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/apellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/apellidosTextView"
        app:layout_constraintStart_toEndOf="@id/apellidosTextView"
        android:text="Daniel"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/usuarioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/apellidosTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Usuario: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/usuarioTextView"
        app:layout_constraintStart_toEndOf="@id/usuarioTextView"
        android:text="Daniel"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/grupoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/usuarioTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Grupo: "
        android:textStyle="bold"
         android:textSize="20sp"/>

    <TextView
        android:id="@+id/grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/grupoTextView"
        app:layout_constraintStart_toEndOf="@id/grupoTextView"
        android:text="Daniel"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/dniTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/grupoTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="DNI: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/dni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/dniTextView"
        app:layout_constraintStart_toEndOf="@id/dniTextView"
        android:text="Daniel"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nacimientoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dniTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Nacimiento: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/nacimientoTextView"
        app:layout_constraintStart_toEndOf="@id/nacimientoTextView"
        android:text="Daniel"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/ultimoAccesoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nacimientoTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Último acceso: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/ultimo_acceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ultimoAccesoTextView"
        app:layout_constraintStart_toEndOf="@id/ultimoAccesoTextView"
        android:text="Daniel"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/accesosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ultimoAccesoTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Nº accesos: "
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/accesos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/accesosTextView"
        app:layout_constraintStart_toEndOf="@id/accesosTextView"
        android:text="Daniel"
        android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>